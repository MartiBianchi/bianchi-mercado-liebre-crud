<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Formulario de creación'}) %>

  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Formulario de creación de usuario</h2>
        </div>
      </div>
      <div class="col-12">
        <form action="/users" method="post" enctype="multipart/form-data">
          <div class="row product-detail">
            <div class="col-12 col-md-6">
              <label for="firstName" class="form-label">Nombre:</label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                placeholder="Juan"
                class="form-input"
              />
            </div>
            <div class="col-12 col-md-6">
              <label for="lastName" class="form-label">Apellido:</label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                placeholder="Doe"
                class="form-input"
              />
            </div>
            <div class="col-12 col-md-6">
              <label for="email" class="form-label">Correo:</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="example@email.com"
                class="form-input"
              />
            </div>
            <div class="col-12 col-md-6">
              <label for="password" class="form-label">Contraseña:</label>
              <input
                type="password"
                id="password"
                name="password"
                placeholder="******"
                class="form-input"
              />
            </div>
            <div class="col-12 col-md-6">
              <label for="accesType" class="form-label">Rol:</label>
              <select name="accessType" id="accessType" class="form-input">
                <option value=""></option>
                <option value="admin">Administrador</option>
                <option value="user">Usuario</option>
              </select>
            </div>

            <div class="col-12">
              <label for="image" class="form-label">Imagen de perfíl:</label>
              <input
                type="file"
                name="image"
                id="image"
                class="form-input"
                accept="image/jpg, image/png"
              />
            </div>

            <div class="col-12">
              <button type="submit" class="buy-now-button">
                Guardar producto
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
