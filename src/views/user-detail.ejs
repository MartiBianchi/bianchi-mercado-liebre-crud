<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head', {title: user.firstName}) %>

  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <!-- product detail -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">
            Informaci√≥n del usuario: <%= user.name %>
          </h2>
        </div>
      </div>
      <div class="product-detail">
        <div class="row">
          <div class="col-12 col-lg-8">
            <img
              src="/images/users/<%= user.image %>"
              alt="product image"
              class="product-detail-img"
            />
            <p class="product-detail-description"></p>
          </div>
          <div class="col-12 col-lg-4">
            <article class="product-detail-info">
              <h2 class="product-detail-title"><%= user.name %></h2>

              <ul class="actions-list">
                <li>
                  <h2><%= user.firstName %> <%= user.lastName %></h2>
                </li>
                <li>
                  <p><%= user.email %></p>
                </li>
                <li>
                  <p><%= user.accessType %></p>
                </li>
              </ul>
            </article>
          </div>
        </div>
      </div>
    </div>
    <!-- /product detail -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
