<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Include Head -->
    <%- include('partials/head', {title: 'Login'}) %>
  </head>
  <body>
    <%- include('partials/headerNavbar') %>
    <main>
      <form action="/login/auth" method="post" class="login-form_container">
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="correo@gmail.com"
          class="login-form_input"
        />

        <% if (locals.errors && errors.email) { %>
        <p class="flash-errors"><%= errors.email.msg %></p>
        <% } %>

        <label for="password">Contraseña</label>
        <input
          type="password"
          name="password"
          id="password"
          class="login-form_input"
        />

        <% if (locals.errors && errors.password) { %>
        <p class="flash-errors"><%= errors.password.msg %></p>
        <% } %>

        <button type="submit" class="login-form_button">Iniciar sesión</button>
      </form>
    </main>
  </body>
</html>
